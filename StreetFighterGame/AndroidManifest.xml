        <activity
            android:name="com.nahool.streetfightergame.ContactUs"
            android:label="@string/title_activity_contact_us" >
        </activity>
        <activity
            android:name="com.nahool.streetfightergame.ArenaSelection"
            android:label="@string/title_activity_arena_selection"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.nahool.streetfightergame.FightersSelection"
            android:label="@string/title_activity_fighters_selection"
            android:screenOrientation="landscape" >
